
{
    "version": 2,
    "controller": {},
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "default",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "*",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    }
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "websocket",
                    "endpoint": {
                        "type": "tcp",
                        "port": 60001
                    },
                    "debug": true
                },
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8081
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "../web"
                        }
                    }
                }
            ]
        }
    ]
}